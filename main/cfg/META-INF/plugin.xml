<idea-plugin url="http://bitbucket.org/shorn/sbt-changelist-action/wiki/Home">
  <name>SBT ChangeListAction</name>
  <description>
    Provides the ability to define custom actions that you can invoke on
    any VCS changelist in order to execute OS commands against the changelist
    content.
    There's documentation available at the homepage.
  </description>
  <version>1.0</version>
  <vendor email="cla-shorn@sneakemail.com"
          logo="/net/intellij/plugins/sbt/cla/icons/frog16.png">
    Shorn Tolley
  </vendor>

  <idea-version since-build="117.418"/>
  <change-notes><![CDATA[
    <p>1.0</p>
    <ul>
      <li>recompiled with IDEA 11.1.2</li>
    </ul>
    <p>0.1</p>
    <ul>
      <li>initial version published</li>
    </ul>
  ]]>
  </change-notes>


  <application-components>
    <component>
      <implementation-class>
        net.intellij.plugins.sbt.cla.ClaApplicationComponent
      </implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>
        net.intellij.plugins.sbt.cla.ClaProjectComponent
      </implementation-class>
    </component>
  </project-components>
</idea-plugin>