<idea-plugin url="http://bitbucket.org/shorn/sbt-changelist-action/wiki/Home">
  <name>SBT ChangeListAction</name>
  <description>
    Provides the ability to define custom actions that you can invoke on
    any VCS changelist (via the right-click context menu).
    There's some basic documentation available at the homepage.
  </description>
  <version>0.1</version>
  <vendor email="cla-shorn@sneakemail.com"
          logo="/net/intellij/plugins/sbt/cla/icons/frog16.png">
    Shorn Tolley
  </vendor>
  <idea-version since-build="8000"/>

  <application-components>
    <component>
      <implementation-class>
        net.intellij.plugins.sbt.cla.ClaApplicationComponent
      </implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>
        net.intellij.plugins.sbt.cla.ClaProjectComponent
      </implementation-class>
    </component>
  </project-components>
</idea-plugin>